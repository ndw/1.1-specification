default namespace p = "http://www.w3.org/ns/xproc"
namespace local = ""

# This schema could be made more constrained.

Step = Step-json-join

Step-json-join =
  element json-join {
    name.ncname.attr?,
    common.attributes,
    use-when.attr?,
    step.attributes,
    attribute flatten-arrays { xsd:boolean }?,
    (WithInput* & WithOption* & (Documentation|PipeInfo)*)
  }

